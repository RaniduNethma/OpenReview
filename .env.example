# ============================================
# OpenReview Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# Never commit .env to git!

# ============================================
# Application Settings
# ============================================
SPRING_PROFILE=dev
PORT=8080
LOG_LEVEL=DEBUG
SQL_LOG_LEVEL=INFO

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=jdbc:postgresql://localhost:5432/openreview
DATABASE_USERNAME=openreview
DATABASE_PASSWORD=devpassword

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# GitHub Configuration
# ============================================
# Required: Get your token from https://github.com/settings/tokens
# Permissions needed: repo, read:org, read:user
GITHUB_TOKEN=ghp_your_personal_access_token_here

# Required: Generate a strong secret for webhook validation
# You can use: openssl rand -hex 32
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Optional: For GitHub App (leave empty if using Personal Access Token)
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY=
GITHUB_INSTALLATION_ID=

# ============================================
# Ollama LLM Configuration
# ============================================
OLLAMA_BASE_URL=http://localhost:11434

# Available models:
# - codellama:13b (recommended, best overall)
# - deepseek-coder:6.7b (faster)
# - codellama:7b (lightweight)
# - starcoder2:15b (most detailed)
OLLAMA_MODEL=codellama:13b

# Timeout in milliseconds (2 minutes)
OLLAMA_TIMEOUT=120000

# ============================================
# Review Settings
# ============================================
# Mode: beginner | intermediate | senior
DEFAULT_MODE=beginner

# Maximum number of files to review per PR
MAX_FILES_PER_REVIEW=50

# Review timeout in milliseconds (5 minutes)
REVIEW_TIMEOUT=300000

# ============================================
# Rate Limiting
# ============================================
# Window size in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Feature Flags
# ============================================
ENABLE_QUEUE=true
ENABLE_CACHING=true